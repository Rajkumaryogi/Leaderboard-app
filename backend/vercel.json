{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "socket/**",
          "models/**",
          "controllers/**",
          "routes/**",
          "middleware/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "server.js",
      "headers": {
        "Connection": "Upgrade",
        "Upgrade": "websocket"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/socket.io/:path*",
      "destination": "server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "MONGODB_URI": "@mongodb-uri"
  },
  "regions": ["iad1"],
  "public": false,
  "features": {
    "webpack": false
  }
}